<?xml version='1.0' encoding='utf-8'?>
<widget id="com.honsoworld.brassbadger" version="0.8.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>BrassBadger</name>
    <description>
        Ammo Stock
    </description>
    <author email="taylor@honsoworld.com" href="http://brassbadger.com">
        Taylor Honsowetz
    </author>
    <feature name="http://api.phonegap.com/1.0/device" />
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
    <preference name="permissions" value="none" />
	<preference name="phonegap-version" value="3.1.0" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="android-minSdkVersion" value="11" />
	<preference name="android-targetSdkVersion" value="16" />
    <preference name="android-installLocation" value="auto" />
    <icon src="images/icon/android/icon-96-xhdpi.png" />
	<gap:platform name="android" />
	<gap:plugin name="org.apache.cordova.geolocation" />
	<gap:plugin name="org.apache.cordova.inappbrowser" />
    <icon gap:density="ldpi" gap:platform="android" src="images/icon/android/icon-36-ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="images/icon/android/icon-48-mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="images/icon/android/icon-72-hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="images/icon/android/icon-96-xhdpi.png" />
    <access origin="*" />
	<access origin="http://brassbadger.com" />
	<access origin="http://ws.geonames.org" />
	
</widget>
